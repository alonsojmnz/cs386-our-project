<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>All Posts</title>
</head>
<body>
    <header>
        <h1>All Posts</h1>
    </header>

    <main>
        <% posts.forEach(function(post) { %>
            <div>
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
                <p>Posted by: <%= post.poster %></p>
                <p>Post ID: <%= post.post_id %></p>
            </div>
        <% }); %>
        <a href="/blog">Post a new comment!</a>
        <a href="/">Home</a>
    </main>
</body>
</html>
